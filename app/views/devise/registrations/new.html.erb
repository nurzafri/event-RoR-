<div id="page-wrapper" style="<%= 'margin: 0' if !user_signed_in? %>">
  <div class="page-content">
    <br>
    <div class="row">
      <div class="col-sm-offset-3 col-sm-6">
        <div class="panel panel-yellow">
          <div class="panel-heading">Sign up</div>
          <div class="panel-body pan">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-horizontal'}) do |f| %>

              <div class="form-body pal">
              
                <div class="form-group">
                  <%= f.label :email, class: "col-md-3 control-label" %>
                  <div class="col-md-9">
                    <div class="input-icon right">
                      <i class="fa fa-user"></i>
                      <%= f.email_field :email, autofocus: true, class: "form-control" %>
                    </div>
                  </div>
                </div>
              
                <div class="form-group">
                  <%= f.label :password, class: "col-md-3 control-label" %>
                  <div class="col-md-9">
                    <div class="input-icon right">
                      <i class="fa fa-lock"></i>
                      <%= f.password_field :password, autofocus: true, class: "form-control" %>
                    </div>
                    <% if @minimum_password_length %>
                      <span class="help-block mbn">
                        <small><%= @minimum_password_length %> characters minimum</small>
                      </span>
                    <% end %>
                  </div>
                </div>
              
                <div class="form-group">
                  <%= f.label :password_confirmation, 'Confirmation', class: "col-md-3 control-label" %>
                  <div class="col-md-9">
                    <div class="input-icon right">
                      <i class="fa fa-lock"></i>
                      <%= f.password_field :password_confirmation, autofocus: true, class: "form-control" %>
                    </div>
                  </div>
                </div>

              </div>

              <div class="form-actions pal">
                <div class="form-group mbn">
                  <div class="col-md-offset-3 col-md-6">
                    <%= f.submit "Sign up", class: "btn btn-primary" %>&nbsp;&nbsp;
                    <%= render "devise/shared/links" %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

</div>
